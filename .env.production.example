# Production Environment Variables Template
# Copy this file to .env.production and fill in your actual values

# Application
NODE_ENV=production
PORT=4001

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/bidias_ecommerce?retryWrites=true&w=majority
MONGO_ROOT_USERNAME=your_mongo_username
MONGO_ROOT_PASSWORD=your_mongo_password
MONGO_PORT=27017

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# JWT Authentication
JWT_SECRET=your_super_secure_jwt_secret_key_here_min_32_chars
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_here_min_32_chars
JWT_RESET_SECRET=your_super_secure_reset_secret_key_here_min_32_chars
JWT_EXPIRES_IN=1h

# Stripe Payment
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

# Frontend
FRONTEND_URL=https://your-frontend-domain.com
REACT_APP_API_URL=https://your-backend-api.com
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# File Upload
UPLOAD_PATH=/tmp/uploads
MAX_FILE_SIZE=10MB

# Security
SESSION_SECRET=your_super_secure_session_secret_key_change_this_in_production
CORS_ORIGIN=https://your-frontend-domain.com

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/bidias-ecommerce.log

# AI Services (Optional)
OPENAI_API_KEY=your_openai_api_key
OLLAMA_BASE_URL=http://localhost:11434

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=production

# Performance
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CDN (Optional)
CDN_URL=https://your-cdn-url.com
CDN_BUCKET=your-cdn-bucket

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
MIXPANEL_TOKEN=your_mixpanel_token

# Social Auth (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# WebSocket
WS_PORT=4002
WS_CORS_ORIGIN=https://your-frontend-domain.com
