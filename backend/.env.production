# Production Environment Configuration
NODE_ENV=production
PORT=4000

# Database Configuration - will be set by Render
MONGODB_URI=${MONGODB_URI}

# Redis Configuration - will be set by Render if Redis is added
REDIS_HOST=${REDIS_HOST}
REDIS_PORT=${REDIS_PORT}
REDIS_PASSWORD=${REDIS_PASSWORD}

# JWT Configuration - will be auto-generated by Render
JWT_SECRET=${JWT_SECRET}
JWT_REFRESH_SECRET=${JWT_REFRESH_SECRET}
JWT_RESET_SECRET=${JWT_RESET_SECRET}
JWT_EXPIRES_IN=1h

# Frontend URL - will be set by Render
FRONTEND_URL=${FRONTEND_URL}

# Backend URL - will be set by Render
BACKEND_URL=${BACKEND_URL}

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=${SMTP_USER}
SMTP_PASSWORD=${SMTP_PASSWORD}
SMTP_FROM=noreply@your-domain.com

# OAuth Configuration
GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID}
GOOGLE_CLIENT_SECRET=${GOOGLE_CLIENT_SECRET}
FACEBOOK_APP_ID=${FACEBOOK_APP_ID}
FACEBOOK_APP_SECRET=${FACEBOOK_APP_SECRET}

# Stripe Configuration
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY}

# OpenAI Configuration
OPENAI_API_KEY=${OPENAI_API_KEY}

# File Upload Configuration
UPLOAD_PATH=/tmp/uploads
MAX_FILE_SIZE=10MB

# Security
SESSION_SECRET=${SESSION_SECRET}
